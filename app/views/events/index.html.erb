<h1>Listing events</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>   </th>
      <th>Fees</th>
      <th>   </th>
      <th>Event date</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr class="success">
        <td><%= link_to event.name, event %></td>
        <td>   </td>
        <td><%= event.fees %></td>
        <td>   </td>
        <td><%= event.event_date %></td>
        <td>   </td>
        
        <td><%= link_to "Attend!", events_path, class: "btn btn-small btn-success" %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

